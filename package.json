{
  "name": "vba-file-generator",
  "displayName": "VBA New File Generator",
  "description": "Adds the ability to create .cls and .bas files with basic boilerplate",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.newVbaFile",
        "title": "Create New VBA File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "editorIsOpen",
          "command": "extension.newVbaFile",
          "group": "aTopGroup"
        }
      ],
      "editor/context": [
        {
          "when": "!editorReadonly && isWindows",
          "command": "extension.newVbaFile",
          "group": "aTopGroup"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/vsce": "^2.22.0",
    "vsce": "^2.15.0"
  }
}
